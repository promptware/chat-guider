{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "src/**/*", "examples/airline-tools.ts", "legacy-runtime.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "test-d"
  ],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ES2022"
    }
  }
} 
